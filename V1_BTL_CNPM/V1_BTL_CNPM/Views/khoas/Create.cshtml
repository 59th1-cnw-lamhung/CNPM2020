@model V1_BTL_CNPM.Models.khoa

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tạo khoa</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="panel panel-default" style="width:700px">

            <form>


                <div class="form-group">
                    @Html.LabelFor(model => model.MaKhoa, "Mã khoa", htmlAttributes: new { @class = "control-label col-md-2" })
                    
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MaKhoa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaKhoa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TenKhoa, "Tên khoa", htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenKhoa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenKhoa, "", new { @class = "text-danger" })
                    </div>
                </div>

            </form>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo mới" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>





        }




        <div>
            @Html.ActionLink("Trở lại danh sách", "Khoa")
        </div>
