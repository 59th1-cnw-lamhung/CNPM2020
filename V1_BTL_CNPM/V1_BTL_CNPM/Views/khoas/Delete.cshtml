@model V1_BTL_CNPM.Models.khoa

@{
    ViewBag.Title = "Delete";
}

<h4>Xóa thông tin khoa</h4>
<hr />
<h5 style="color:red">Bạn có muốn xóa khoa này không ?</h5>
<div>

    
    <dl class="dl-horizontal">
        <dd>
            <b>Mã khoa:</b> @Html.DisplayFor(model => model.MaKhoa)
        </dd>

        <dd>
            <b>Tên khoa:</b> @Html.DisplayFor(model => model.TenKhoa)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa bản ghi" class="btn btn-success" />    

        </div>
    }

    <div>
        @Html.ActionLink("Trở lại danh sách", "Khoa")
    </div>

</div>
