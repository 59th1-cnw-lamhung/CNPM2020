@model V1_BTL_CNPM.Models.sinhvien

@{
    ViewBag.Title = "Delete";
}

<h4>Xóa thông tin sinh viên</h4>
<hr />
<h5 style="color:red">Bạn có muốn xóa thông tin sinh viên này không ?</h5>
<div>
    <dl class="dl-horizontal">
        <dd>
            <b>Mã sinh viên</b>: @Html.DisplayFor(model => model.MaSV)
        </dd>

        <dd>
            <b>Tên sinh viên</b>: @Html.DisplayFor(model => model.TenSV)
        </dd>

        <dd>
            <b>Khoa</b>: @Html.DisplayFor(model => model.khoa.TenKhoa)
        </dd>

        <dd>
            <b>Ngày sinh</b>: @Html.DisplayFor(model => model.NgaySinh)
        </dd>



        <dd>
            <b>Giới tính</b>: @Html.DisplayFor(model => model.GioiTinh)
        </dd>



        <dd>
            <b>Quê quán</b>: @Html.DisplayFor(model => model.QueQuan)
        </dd>


        <dd>
            <b>Số điện thoại</b>: @Html.DisplayFor(model => model.SoDienThoai)
        </dd>



        <dd>
            <b>Email</b>: @Html.DisplayFor(model => model.Email)
        </dd>




        <dd>
            <b>Hình ảnh</b>: @Html.DisplayFor(model => model.HinhAnh)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa bản ghi" class="btn btn-success" /> 

        </div>
    }
    <div>@Html.ActionLink("Trở lại danh sách", "Index")</div>
</div>
