@model IEnumerable<V1_BTL_CNPM.Models.sinhvien>

@{
    ViewBag.Title = "Index";
}

    <h4>Thông tin sinh viên</h4>



@RenderPage("../Shared/toptable.cshtml")
<thead>
    <tr role="row">
        

        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 120px;">Mã sinh viên</th>
        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 67px;">Tên sinh viên</th>
        
        
        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 67px;">Địa chỉ</th>
        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 67px;">SĐT</th>
        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 67px;">Email</th>
        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 67px;">Hình ảnh</th>
        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 67px;">Chức năng</th>

    </tr>
</thead>

@foreach (var item in Model)
{
<tr>
    
    <td>
        @Html.DisplayFor(modelItem => item.MaSV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenSV)
    </td>
    
 
    <td>
        @Html.DisplayFor(modelItem => item.DiaChi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoDienThoai)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>

    <td>
        <img src="@Url.Content(item.HinhAnh)" width="100" height="100" />
    </td>

    <td>
        @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaSV }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSV }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaSV })
    </td>
</tr>
}

@RenderPage("../Shared/bottomtable.cshtml")
