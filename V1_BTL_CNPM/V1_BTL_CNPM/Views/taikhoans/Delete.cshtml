@model V1_BTL_CNPM.Models.taikhoan

@{
    ViewBag.Title = "Delete";
}

<h4>Xóa thông tin tài khoản</h4>
<hr />
<h5 style="color:red">Bạn có muốn xóa tài khoản này không ?</h5>
<div>
    <dl class="dl-horizontal">
        <dd>
            <b>Mã tài khoản</b>: @Html.DisplayFor(model => model.MaTK)

        </dd>
        <dd>
            <b>Tài khoản</b>: @Html.DisplayFor(model => model.TenTaiKhoan)
        </dd>


        <dd>
            <b>Mật khẩu</b>: @Html.DisplayFor(model => model.MatKhau)
        </dd>

        <dd>
            <b>Quyền truy cập</b>: @Html.DisplayFor(model => model.Quyen)
        </dd>



        <dd>
            <b>Ngày tạo</b>: @Html.DisplayFor(model => model.NgayTao)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa bản ghi" class="btn btn-success" /> 

        </div>
    }
    <div>
        @Html.ActionLink("Trở lại danh sách", "../QLTaiKhoan/QLTaiKhoan")
    </div>
</div>
