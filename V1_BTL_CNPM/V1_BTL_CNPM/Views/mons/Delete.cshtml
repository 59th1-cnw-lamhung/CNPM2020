@model V1_BTL_CNPM.Models.mon

@{
    ViewBag.Title = "Delete";
}

<h4>Xóa thông tin môn học</h4>
<hr />
<h5 style="color:red">Bạn có muốn xóa môn học này không ?</h5>
<div>
    <dl class="dl-horizontal">
        <dd>
            <b>Mã môn:</b> @Html.DisplayFor(model => model.MaMon)
        </dd>

        <dd>
            <b>Tên môn:</b> @Html.DisplayFor(model => model.TenMon)
        </dd>

        <dd>
            <b>Tên ngành:</b> @Html.DisplayFor(model => model.nganh.TenNganh)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa bản ghi" class="btn btn-success" /> 
            
        </div>
    }
<div>@Html.ActionLink("Trở lại danh sách", "Index")</div>
</div>
