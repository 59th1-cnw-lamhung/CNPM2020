@model V1_BTL_CNPM.Models.lopmonhoc

@{
    ViewBag.Title = "Delete";
}

<h4>Xóa thông tin lớp môn học</h4>
<hr />
<h5 style="color:red">Bạn có muốn xóa lớp môn học này không ?</h5>
<div>
    <dl class="dl-horizontal">
        <dd>
            <b>Mã lớp theo môn học</b>: @Html.DisplayFor(model => model.MaLTM)
        </dd>

        <dd>
            <b>Tên lớp môn học</b>: @Html.DisplayFor(model => model.TenLopMon)
        </dd>

        <dd>
            <b>Tên môn học</b>: @Html.DisplayFor(model => model.mon.TenMon)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa bản ghi" class="btn btn-success" />
            
        </div>
    }
<div>@Html.ActionLink("Trở lại danh sách", "Index")</div>
</div>
