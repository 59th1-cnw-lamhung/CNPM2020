@model V1_BTL_CNPM.Models.nganh

@{
    ViewBag.Title = "Delete";
}

<h4>Xóa thông tin ngành học</h4>
<hr />
<h5 style="color:red">Bạn có muốn xóa ngành này không ?</h5>
<div>
    <dl class="dl-horizontal">
        <dd>
            <b>Mã ngành</b>: @Html.DisplayFor(model => model.MaNganh)
        </dd>

        <dd>
            <b>Tên ngành</b>: @Html.DisplayFor(model => model.TenNganh)
        </dd>

        <dd>
            <b>Tên khoa</b>: @Html.DisplayFor(model => model.khoa.TenKhoa)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">

            <input type="submit" value="Xóa bản ghi" class="btn btn-success" />

        </div>
    }
    <div>
        @Html.ActionLink("Trở lại danh sách", "Index")
    </div>
</div>
